@model Order

<h2>Проверка</h2>

<p>Пожалуйста, введите актуальные данные</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label>Имя:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Адрес</h3>
    <div class="form-group">
        <label>Информация 1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Информация 2:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Информация 3:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Регион:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Количество:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Различные опции:</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Упаковать в подарочную упокавку
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Выполнить проверку" />
    </div>
</form>